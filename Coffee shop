            <input type="text" placeholder="Message us...">
            <button>Send</button>
        </div>
    </section>

    <script>
        function scrollToMenu() {
            document.getElementById('menu').scrollIntoView({ behavior: 'smooth' });
        }

        // Message send simulation
        const sendBtn = document.querySelector('.message-bar button');
        sendBtn.addEventListener('click', () => {
            const msg = document.querySelector('.message-bar input').value;
            if(msg.trim() !== '') {
                alert(`Message sent: "${msg}"`);
                document.querySelector('.message-bar input').value = '';
            } else {
                alert('Please enter a message.');
            }
        });
    </script>
